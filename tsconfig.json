{
	"include": ["src"],
	"compilerOptions": {
		"target": "es2016",
		"declaration": true,
		"module": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"useUnknownInCatchVariables": true,
		"alwaysStrict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"outDir": "dist"
	}
}
