{
	"name": "@alloc/esbuild-plugin-import-glob",
	"version": "0.1.4",
	"description": "ESBuild plugin to support import.meta.glob imports",
	"type": "module",
	"main": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"publishConfig": {
		"access": "public",
		"directory": "prepublish"
	},
	"scripts": {
		"build": "tsc -p .",
		"dev": "tsc -p . --watch",
		"test": "jest",
		"lint": "eslint .",
		"lint:fix": "pnpm lint --fix",
		"pipeline": "pnpm build && pnpm lint && pnpm test",
		"prepublishOnly": "pnpm pipeline && rm -rf ./prepublish && clean-publish",
		"postpublish": "rm -rf ./prepublish"
	},
	"keywords": [
		"esbuild"
	],
	"author": "sirse",
	"license": "MIT",
	"devDependencies": {
		"@changesets/cli": "^2.25.0",
		"@sirse-dev/eslint-config": "^1.0.12",
		"@types/babel__code-frame": "^7.0.3",
		"@types/babel__core": "^7.1.19",
		"@types/jest": "^28.1.8",
		"@types/node": "16.11.7",
		"clean-publish": "^4.0.1",
		"esbuild": "^0.15.5",
		"eslint": "^8.22.0",
		"memfs": "^3.4.7",
		"prettier": "^2.7.1",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"@babel/core": "^7.18.13",
		"esbuild-rna": "npm:@chialab/esbuild-rna@^0.17.3",
		"fast-glob": "^3.2.11"
	}
}
